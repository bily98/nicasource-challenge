@using System.Security.Claims
<!--begin::User account menu-->
<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-primary fw-semibold py-4 fs-6 w-275px" data-kt-menu="true">
	<!--begin::Menu item-->
	<div class="menu-item px-3">
		<div class="menu-content d-flex align-items-center px-3">
			<!--begin::Avatar-->
			<div class="symbol symbol-50px me-5">
				<img alt="Logo" src='@KTTheme.GetAssetPath("media/avatars/300-1.jpg")' />
			</div>
			<!--end::Avatar-->
			<!--begin::Username-->
			<div class="d-flex flex-column">
				<div class="fw-semibold d-flex align-items-center fs-5">
					@User.FindFirst(ClaimTypes.GivenName).Value @User.FindFirst(ClaimTypes.Surname).Value
				<span class="badge badge-light-success fw-semibold fs-8 px-2 py-1 ms-2">Pro</span></div>
			</div>
			<!--end::Username-->
		</div>
	</div>
	<!--end::Menu item-->
	<!--begin::Menu separator-->
	<div class="separator my-2"></div>
	<!--end::Menu separator-->
	<!--begin::Menu item-->
	<div class="menu-item px-5">
		<a class="menu-link px-5" asp-controller="Auth" asp-action="Logout">Sign Out</a>
	</div>
	<!--end::Menu item-->
</div>
<!--end::User account menu-->